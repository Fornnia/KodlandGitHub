meme_dict = {}
meme_dict['КРИНЖ'] = "Что-то очень странное или стыдное"
meme_dict['ЛОЛ'] = "Что-то очень смешное"
meme_dict['ВАЙБ'] = "Атмосфера, настроение"
meme_dict['ТОКСИК'] = "Токсичный, неприятный, грубый человек"

print("Добро пожаловать в словарь молодежного сленга!")
word = input("Введите непонятное слово (большими буквами!): ")
if word in meme_dict.keys():
    print('Значение слова - ' + word + ': ' + meme_dict[word] )
else:
    print('К сожалению такого слова в словаре нет :(')
    dict_add = input('Хотите добавить новое слово?')
    if dict_add == 'да':
        new_word = input('Нужное вам слово:')
        word_def = input('Значение слова:')
        meme_dict[new_word] = word_def
        print('Слово добавлено!')
